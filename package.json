{
  "name": "bitbucket-conventional-commits",
  "displayName": "Bitbucket Conventional Commits",
  "version": "1.0.1",
  "description": "Validates and generates conventional commit messages in the Bitbucket merge modal with AI-powered suggestions for consistency.",
  "author": "Jared Christensen",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build-chrome": "plasmo build --target=chrome-mv3 --zip",
    "build-firefox": "plasmo build --target=firefox-mv2 --zip",
    "build-edge": "plasmo build --target=edge-mv3 --zip",
    "build-all": "npm run build-chrome && npm run build-firefox && npm run build-edge",
    "package": "plasmo package"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^19.8.0",
    "@hookform/resolvers": "^5.0.1",
    "@plasmohq/storage": "^1.15.0",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-toast": "^1.2.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.56.1",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "3.4.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://bitbucket.org/*"
    ]
  }
}
